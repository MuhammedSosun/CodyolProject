generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String           @id @default(uuid())
  username             String           @unique
  email                String           @unique
  password             String
  role                 Role             @default(USER)
  createdAt            DateTime         @default(now())
  updatedAt            DateTime         @updatedAt
  deletedAt            DateTime?
  createdActivities    Activity[]       @relation("UserActivities")
  ownedCustomers       Customer[]       @relation("CustomerOwner")
  profile              Profile?
  refreshTokens        RefreshToken[]   @relation("UserRefreshTokens")
  assignedTasks        Task[]           @relation("TaskAssignee")
  createdTasks         Task[]           @relation("TaskCreator")
  teamMemberships      TeamMember[]
  transactions         Transaction[]    @relation("UserTransactions")
  payrolls             Payroll[]
  contractFiles        ContractFile[]
  sourceCodeLinks      SourceCodeLink[]
  licenses             License[]
  hostingInfos         HostingInfo[]
  assignedProgramCards ProgramCard[]    @relation("ProgramCardAssignee")
}

model RefreshToken {
  id           String   @id @default(uuid())
  refreshToken String   @unique
  expiredAt    DateTime
  userId       String
  user         User     @relation("UserRefreshTokens", fields: [userId], references: [id], onDelete: Cascade)
}

model Customer {
  id           String         @id @default(uuid())
  ownerUserId  String
  fullName     String
  email        String?
  phone        String?
  companyName  String?
  vatNumber    String?
  website      String?
  address      String?
  description  String?
  designation  String?
  status       CustomerStatus @default(NEW)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  deletedAt    DateTime?
  activities   Activity[]
  owner        User           @relation("CustomerOwner", fields: [ownerUserId], references: [id])
  proposals    Proposal[]
  tasks        Task[]
  transactions Transaction[]

  // ✅ EKLENDİ: ContractFile -> Customer relation (1 customer, many contractFiles)
  contractFiles ContractFile[]

  @@index([ownerUserId])
  @@index([status])
  @@index([deletedAt])
}

model Task {
  id              String     @id @default(uuid())
  assignedUserId  String
  createdByUserId String
  customerId      String?
  title           String
  description     String?
  startDate       DateTime?
  endDate         DateTime?
  status          TaskStatus @default(NEW)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  deletedAt       DateTime?
  activities      Activity[]
  assignedUser    User       @relation("TaskAssignee", fields: [assignedUserId], references: [id])
  createdByUser   User       @relation("TaskCreator", fields: [createdByUserId], references: [id])
  customer        Customer?  @relation(fields: [customerId], references: [id])

  @@index([assignedUserId])
  @@index([createdByUserId])
  @@index([customerId])
  @@index([status])
  @@index([deletedAt])
}

model Activity {
  id              String       @id @default(uuid())
  customerId      String?
  createdByUserId String?
  taskId          String?
  type            ActivityType
  title           String
  description     String?
  createdAt       DateTime     @default(now())
  deletedAt       DateTime?
  createdByUser   User?        @relation("UserActivities", fields: [createdByUserId], references: [id])
  customer        Customer?    @relation(fields: [customerId], references: [id])
  task            Task?        @relation(fields: [taskId], references: [id])

  @@index([customerId])
  @@index([createdByUserId])
  @@index([type])
  @@index([taskId])
}

model Proposal {
  id              String         @id @default(uuid())
  customerId      String
  title           String
  status          ProposalStatus @default(DRAFT)
  validUntil      DateTime
  totalAmount     Decimal?       @db.Decimal(12, 2)
  currency        String         @default("TRY")
  createdByUserId String
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  deletedAt       DateTime?
  customer        Customer       @relation(fields: [customerId], references: [id])
  transactions    Transaction[]

  @@index([customerId])
}

model Profile {
  id     String @id @default(uuid())
  userId String @unique

  // --- Temel Kimlik Bilgileri ---
  firstName  String?
  lastName   String?
  birthDate  DateTime?
  bloodGroup String? // Örn: "A Rh+"
  avatarUrl  String?
  bio        String?   @db.Text // Uzun biyografiler için

  // --- İletişim ve Konum ---
  phone    String?
  address  String? @db.Text
  location String? // Şehir/Ülke (Frontend'deki konum alanı)

  // --- Kurumsal Bilgiler ---
  position   String? // İş Ünvanı (Örn: "Senior Backend Developer")
  department String? // Departman (Örn: "Yazılım Geliştirme")
  startDate  DateTime? // İşe Giriş Tarihi
  employeeId String?   @unique // Personel No (Kurumsal takip için)

  // --- Finansal Bilgiler ---
  iban            String? // Maaş ödemeleri için IBAN
  bankName        String? // Banka Adı
  emergencyPerson String? // Acil Durumda Aranacak Kişi
  emergencyPhone  String? // Acil Durum Telefonu

  // --- Sistem Bilgileri ---
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Team {
  id        String       @id @default(uuid())
  name      String       @unique
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  deletedAt DateTime?
  members   TeamMember[]
}

model TeamMember {
  id        String   @id @default(uuid())
  teamId    String
  userId    String
  role      String?
  createdAt DateTime @default(now())
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([teamId])
  @@index([userId])
}

model Transaction {
  id              String          @id @default(uuid())
  type            TransactionType
  amount          Decimal         @db.Decimal(12, 2)
  paidAmount      Decimal         @default(0) @db.Decimal(12, 2)
  currency        String          @default("TRY")
  date            DateTime        @default(now())
  dueDate         DateTime?
  description     String?
  category        String?
  paymentMethod   PaymentMethod   @default(BANK_TRANSFER)
  referenceNo     String?
  customerId      String?
  proposalId      String?
  createdByUserId String
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  deletedAt       DateTime?
  createdByUser   User            @relation("UserTransactions", fields: [createdByUserId], references: [id], onDelete: Cascade)
  customer        Customer?       @relation(fields: [customerId], references: [id])
  proposal        Proposal?       @relation(fields: [proposalId], references: [id])

  @@index([type])
  @@index([date])
  @@index([customerId])
  @@index([proposalId])
  @@index([createdByUserId])
  @@index([deletedAt])
}

model Leave {
  id        Int         @id @default(autoincrement())
  employee  String
  start     DateTime
  end       DateTime
  color     String?
  status    LeaveStatus @default(PENDING)
  createdAt DateTime    @default(now())
  type      String?
  updatedAt DateTime    @updatedAt
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum PlanType {
  FREE
  PRO
  ENTERPRISE
}

enum CustomerStatus {
  NEW
  CONTACTED
  OFFER_SENT
  WAITING_APPROVAL
  APPROVED
  WON
  LOST
}

enum TaskStatus {
  NEW
  IN_PROGRESS
  ON_HOLD
  COMPLETED
}

enum ActivityType {
  CALL
  EMAIL
  NOTE
  MEETING
  TASK_CREATED
  TASK_UPDATED
  TASK_STATUS_CHANGED
  TASK_COMPLETED
  CUSTOMER_CREATED
  CUSTOMER_UPDATED
  PROPOSAL_CREATED
  PROPOSAL_STATUS_CHANGED
}

enum ProposalStatus {
  DRAFT
  SENT
  EXPIRED
  REJECTED
  APPROVED
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum PaymentMethod {
  CASH
  BANK_TRANSFER
  CREDIT_CARD
  OTHER
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

//teams payrol için
enum PayrollStatus {
  PAID
  PENDING
}

model Payroll {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  month Int // 1-12
  year  Int

  netSalary Int
  status    PayrollStatus @default(PENDING)

  // Admin notu / açıklama
  note String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, month, year]) // aynı ayda 2 bordro olmasın
  @@index([userId])
  @@index([status])
}

enum FileStatus {
  ACTIVE
  INACTIVE
}

enum SourceLinkType {
  FRONTEND
  BACKEND
  LIVE
  OTHER
}

model ContractFile {
  id              String @id @default(uuid())
  createdByUserId String

  // ✅ EKLENDİ: Firma
  customerId String?
  customer   Customer? @relation(fields: [customerId], references: [id], onDelete: SetNull)

  // Sözleşme adı
  title String

  // ✅ EKLENDİ: Tarihler
  startDate DateTime?
  endDate   DateTime?

  // ✅ EKLENDİ: Açıklama
  description String? @db.Text

  // Sözleşme durumu
  status FileStatus @default(ACTIVE)

  // ✅ fileUrl artık opsiyonel (undefined/boş gelirse patlamasın)
  fileUrl  String?
  fileName String?
  mimeType String?
  size     Int?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  createdByUser User @relation(fields: [createdByUserId], references: [id], onDelete: Cascade)

  @@index([createdByUserId])
  @@index([customerId])
  @@index([status])
  @@index([deletedAt])
}

model SourceCodeLink {
  id              String         @id @default(uuid())
  createdByUserId String
  title           String
  url             String
  type            SourceLinkType @default(OTHER)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  deletedAt       DateTime?

  createdByUser User @relation(fields: [createdByUserId], references: [id], onDelete: Cascade)

  @@index([createdByUserId])
  @@index([type])
  @@index([deletedAt])
}

model License {
  id              String     @id @default(uuid())
  createdByUserId String
  title           String
  provider        String?
  startDate       DateTime?
  endDate         DateTime?
  status          FileStatus @default(ACTIVE)
  note            String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  deletedAt       DateTime?

  createdByUser User @relation(fields: [createdByUserId], references: [id], onDelete: Cascade)

  @@index([createdByUserId])
  @@index([status])
  @@index([deletedAt])
}

model HostingInfo {
  id              String     @id @default(uuid())
  createdByUserId String
  title           String
  provider        String?
  ip              String?
  domain          String?
  dbPassword      String? // PROD'da şifreleme önerilir
  note            String?
  status          FileStatus @default(ACTIVE)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  deletedAt       DateTime?

  createdByUser User @relation(fields: [createdByUserId], references: [id], onDelete: Cascade)

  @@index([createdByUserId])
  @@index([status])
  @@index([deletedAt])
}

model Program {
  id          String  @id @default(cuid())
  name        String
  description String?
  isActive    Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  columns ProgramColumn[]
}

model ProgramColumn {
  id        String  @id @default(cuid())
  programId String
  program   Program @relation(fields: [programId], references: [id], onDelete: Cascade)

  title String
  order Int    @default(0)

  cards ProgramCard[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([programId, order])
}

model ProgramCard {
  id       String        @id @default(cuid())
  columnId String
  column   ProgramColumn @relation(fields: [columnId], references: [id], onDelete: Cascade)

  title   String
  content String?
  order   Int     @default(0)

  assigneeUserId String?
  assigneeUser   User?   @relation("ProgramCardAssignee", fields: [assigneeUserId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([columnId, order])
  @@index([assigneeUserId])
}
