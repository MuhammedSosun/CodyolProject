generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String         @id @default(uuid())
  username          String         @unique
  email             String         @unique
  password          String
  role              Role           @default(USER)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  deletedAt         DateTime?
  createdActivities Activity[]     @relation("UserActivities")
  ownedCustomers    Customer[]     @relation("CustomerOwner")
  profile           Profile?
  refreshTokens     RefreshToken[] @relation("UserRefreshTokens")
  assignedTasks     Task[]         @relation("TaskAssignee")
  createdTasks      Task[]         @relation("TaskCreator")
  teamMemberships   TeamMember[]
  transactions      Transaction[]  @relation("UserTransactions")

  payrolls Payroll[]

  contractFiles   ContractFile[]
  sourceCodeLinks SourceCodeLink[]
  licenses        License[]
  hostingInfos    HostingInfo[]
}

model RefreshToken {
  id           String   @id @default(uuid())
  refreshToken String   @unique
  expiredAt    DateTime
  userId       String
  user         User     @relation("UserRefreshTokens", fields: [userId], references: [id], onDelete: Cascade)
}

model Customer {
  id           String         @id @default(uuid())
  ownerUserId  String
  fullName     String
  email        String?
  phone        String?
  companyName  String?
  vatNumber    String?
  website      String?
  address      String?
  description  String?
  designation  String?
  status       CustomerStatus @default(NEW)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  deletedAt    DateTime?
  activities   Activity[]
  owner        User           @relation("CustomerOwner", fields: [ownerUserId], references: [id])
  proposals    Proposal[]
  tasks        Task[]
  transactions Transaction[]

  @@index([ownerUserId])
  @@index([status])
  @@index([deletedAt])
}

model Task {
  id              String     @id @default(uuid())
  assignedUserId  String
  createdByUserId String
  customerId      String?
  title           String
  description     String?
  startDate       DateTime?
  endDate         DateTime?
  status          TaskStatus @default(NEW)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  deletedAt       DateTime?
  activities      Activity[]
  assignedUser    User       @relation("TaskAssignee", fields: [assignedUserId], references: [id])
  createdByUser   User       @relation("TaskCreator", fields: [createdByUserId], references: [id])
  customer        Customer?  @relation(fields: [customerId], references: [id])

  @@index([assignedUserId])
  @@index([createdByUserId])
  @@index([customerId])
  @@index([status])
  @@index([deletedAt])
}

model Activity {
  id              String       @id @default(uuid())
  customerId      String?
  createdByUserId String?
  taskId          String?
  type            ActivityType
  title           String
  description     String?
  createdAt       DateTime     @default(now())
  deletedAt       DateTime?
  createdByUser   User?        @relation("UserActivities", fields: [createdByUserId], references: [id])
  customer        Customer?    @relation(fields: [customerId], references: [id])
  task            Task?        @relation(fields: [taskId], references: [id])

  @@index([customerId])
  @@index([createdByUserId])
  @@index([type])
  @@index([taskId])
}

model Proposal {
  id              String         @id @default(uuid())
  customerId      String
  title           String
  status          ProposalStatus @default(DRAFT)
  validUntil      DateTime
  totalAmount     Decimal?       @db.Decimal(12, 2)
  currency        String         @default("TRY")
  createdByUserId String
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  deletedAt       DateTime?
  customer        Customer       @relation(fields: [customerId], references: [id])
  transactions    Transaction[]

  @@index([customerId])
}

model Profile {
  id        String   @id @default(uuid())
  userId    String   @unique
  firstName String?
  lastName  String?
  phone     String?
  bio       String?
  position  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Team {
  id        String       @id @default(uuid())
  name      String       @unique
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  deletedAt DateTime?
  members   TeamMember[]
}

model TeamMember {
  id        String   @id @default(uuid())
  teamId    String
  userId    String
  role      String?
  createdAt DateTime @default(now())
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([teamId])
  @@index([userId])
}

model Transaction {
  id              String          @id @default(uuid())
  type            TransactionType
  amount          Decimal         @db.Decimal(12, 2)
  currency        String          @default("TRY")
  date            DateTime        @default(now())
  description     String?
  category        String?
  paymentMethod   PaymentMethod   @default(BANK_TRANSFER)
  referenceNo     String?
  customerId      String?
  proposalId      String?
  createdByUserId String
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  deletedAt       DateTime?
  createdByUser   User            @relation("UserTransactions", fields: [createdByUserId], references: [id], onDelete: Cascade)
  customer        Customer?       @relation(fields: [customerId], references: [id])
  proposal        Proposal?       @relation(fields: [proposalId], references: [id])

  @@index([type])
  @@index([date])
  @@index([customerId])
  @@index([proposalId])
  @@index([createdByUserId])
  @@index([deletedAt])
}

model Leave {
  id        Int         @id @default(autoincrement())
  employee  String
  start     DateTime
  end       DateTime
  color     String?
  status    LeaveStatus @default(PENDING)
  createdAt DateTime    @default(now())
  type      String?
  updatedAt DateTime    @updatedAt
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum PlanType {
  FREE
  PRO
  ENTERPRISE
}

enum CustomerStatus {
  NEW
  CONTACTED
  OFFER_SENT
  WAITING_APPROVAL
  APPROVED
  WON
  LOST
}

enum TaskStatus {
  NEW
  IN_PROGRESS
  ON_HOLD
  COMPLETED
}

enum ActivityType {
  CALL
  EMAIL
  NOTE
  MEETING
  TASK_CREATED
  TASK_UPDATED
  TASK_STATUS_CHANGED
  TASK_COMPLETED
  CUSTOMER_CREATED
  CUSTOMER_UPDATED
  PROPOSAL_CREATED
  PROPOSAL_STATUS_CHANGED
}

enum ProposalStatus {
  DRAFT
  SENT
  EXPIRED
  REJECTED
  APPROVED
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum PaymentMethod {
  CASH
  BANK_TRANSFER
  CREDIT_CARD
  OTHER
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

//teams payrol için
enum PayrollStatus {
  PAID
  PENDING
}

model Payroll {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  month Int // 1-12
  year  Int

  netSalary Int
  status    PayrollStatus @default(PENDING)

  // Admin notu / açıklama
  note String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, month, year]) // aynı ayda 2 bordro olmasın
  @@index([userId])
  @@index([status])
}

enum FileStatus {
  ACTIVE
  INACTIVE
}

enum SourceLinkType {
  FRONTEND
  BACKEND
  LIVE
  OTHER
}

model ContractFile {
  id              String     @id @default(uuid())
  createdByUserId String
  title           String
  fileUrl         String
  status          FileStatus @default(ACTIVE)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  deletedAt       DateTime?

  createdByUser User @relation(fields: [createdByUserId], references: [id], onDelete: Cascade)

  @@index([createdByUserId])
  @@index([status])
  @@index([deletedAt])
}

model SourceCodeLink {
  id              String         @id @default(uuid())
  createdByUserId String
  title           String
  url             String
  type            SourceLinkType @default(OTHER)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  deletedAt       DateTime?

  createdByUser User @relation(fields: [createdByUserId], references: [id], onDelete: Cascade)

  @@index([createdByUserId])
  @@index([type])
  @@index([deletedAt])
}

model License {
  id              String     @id @default(uuid())
  createdByUserId String
  title           String
  provider        String?
  startDate       DateTime?
  endDate         DateTime?
  status          FileStatus @default(ACTIVE)
  note            String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  deletedAt       DateTime?

  createdByUser User @relation(fields: [createdByUserId], references: [id], onDelete: Cascade)

  @@index([createdByUserId])
  @@index([status])
  @@index([deletedAt])
}

model HostingInfo {
  id              String     @id @default(uuid())
  createdByUserId String
  title           String
  provider        String?
  ip              String?
  domain          String?
  dbPassword      String? // PROD'da şifreleme önerilir
  note            String?
  status          FileStatus @default(ACTIVE)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  deletedAt       DateTime?

  createdByUser User @relation(fields: [createdByUserId], references: [id], onDelete: Cascade)

  @@index([createdByUserId])
  @@index([status])
  @@index([deletedAt])
}
